body
	section(class="main")
		form(class="form-2")
					h1
						span(class="log-in") Log in 
						span or
						span(class="sign-up") sign up
					p(class="float")
						label(for="login")i(class="icon-user") Username
						input(type="text",name="login",placeholder="Username or email",id="username")
					p(class="float")
						label(for="password")i(class="icon-lock") Password
						input(type="password",name="password",placeholder="Password",class="showpassword",id="password")
					p(class="clearfix")
						input(type="checkbox",name="remember",id="remember")
						label(for="remember") Remember me
					p(class="clearfix")
						a(href="#",class="log-twitter") Register  
						input(type="submit",name="submit",value="Log in",id="submit")